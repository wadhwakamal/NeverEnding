# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

def neverending_pods
  pod 'SwiftyJSON', '~> 3.1.3'
  pod 'Alamofire', '~> 4.7.2'
  pod 'SDWebImage', '~> 4.0'
  pod 'SVProgressHUD'
  pod 'GSImageViewerController'
end

target 'NeverEnding' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for NeverEnding
  neverending_pods
end
target 'NeverEndingTests' do
    inherit! :search_paths
    # Pods for testing
    neverending_pods

end


